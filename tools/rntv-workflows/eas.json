{
  "cli": {
    "version": ">= 16.0.1",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "android": {
        "resourceClass": "large",
        "image": "latest"
      },
      "ios": {
        "resourceClass": "large",
        "image": "latest"
      },
      "withoutCredentials": true,
      "distribution": "internal",
      "node": "22.14.0"
    },
    "rntester-prebuild": {
      "extends": "base",
      "ios": {
        "config": "build-rntester-apple-prebuild.yml"
      }
    },
    "rncore": {
      "extends": "base",
      "ios": {
        "config": "build-rncore-apple.yml"
      }
    },
    "rntester": {
      "extends": "base",
      "ios": {
        "config": "build-rntester-apple.yml"
      },
      "android": {
        "config": "build-rntester-android.yml"
      }
    },
    "rntester-prebuild-release": {
      "extends": "rntester-prebuild",
      "env": {
        "RNTV_RELEASE_BUILD": "1"
      }
    },
    "rntester-release": {
      "extends": "rntester",
      "env": {
        "RNTV_RELEASE_BUILD": "1"
      }
    }
  }
}
